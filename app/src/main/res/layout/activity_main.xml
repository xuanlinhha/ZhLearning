<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true">

            <ProgressBar
                android:id="@+id/importProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:gravity="top"
                android:inputType="textMultiLine" />

            <ImageButton
                android:id="@+id/addButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@id/editText"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/goButton"
                android:background="@drawable/add" />

            <ImageButton
                android:id="@+id/goButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@id/editText"
                android:layout_toLeftOf="@+id/webView"
                android:layout_marginRight="10dp"
                android:background="@drawable/play" />

            <ImageButton
                android:id="@+id/replayButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@id/editText"
                android:layout_toRightOf="@+id/webView"
                android:layout_marginLeft="10dp"
                android:background="@drawable/replay" />

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/editText"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/replayButton"
                android:background="@drawable/minus" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/editText"
                android:layout_centerHorizontal="true">

            </WebView>

            <ImageButton
                android:id="@+id/listButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/webView"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/prevButton"
                android:background="@drawable/list" />

            <ImageButton
                android:id="@+id/prevButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/webView"
                android:layout_toLeftOf="@+id/webView"
                android:layout_marginRight="10dp"
                android:background="@drawable/left" />

            <ImageButton
                android:id="@+id/nextButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/webView"
                android:layout_toRightOf="@+id/webView"
                android:layout_marginLeft="10dp"
                android:background="@drawable/right" />

            <ImageButton
                android:id="@+id/resetButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/webView"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/nextButton"
                android:background="@drawable/reset" />

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/webView"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>